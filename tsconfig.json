{
  "compilerOptions": {
    "target": "es2017",
    "strict": true,
    "module": "esnext",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": "src",
    "moduleResolution": "node",
    "plugins": [ 
      { 
        "name": "gql.tada/ts-plugin", 
        "schema": "./schema.graphql", 
        "tadaOutputLocation": "./src/graphql-env.d.ts"
      } 
    ]
  }
}